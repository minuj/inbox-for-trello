{
	"manifest_version": 2,

	"name": "Inbox for Trello",
	"description": "Quickly add cards to an 'inbox' list in Trello. Based on GTD, write things down and get them off your mind.",
	"version": "0.0.1",
	"options_page": "options.html",

	"permissions": [
		"tabs",
		"notifications",
		"tabs",
		"https://*.trello.com/*",
		"storage"
	],
	"icons": {
		"16": "img/icon16.png",
		"48": "img/icon48.png",
		"64": "img/icon64.png",
		"128": "img/icon128.png"
	},
	"browser_action": {
		"default_icon": "img/icon19.png",
		"default_title": "Inbox for Trello",
		"default_popup": "popup.html"
	},
	"content_security_policy": "script-src 'self' https://api.trello.com https://ssl.google-analytics.com; object-src 'self'"
}
